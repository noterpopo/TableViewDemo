<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="MyTableLayout">
        <attr name="layout_row_index" format="integer"/>
        <attr name="layout_column_index" format="integer"/>
        <attr name="layout_row_span" format="integer" />
        <attr name="layout_column_span" format="integer" />
    </declare-styleable>

</resources>
